{
  "name": "animestars-kodik-fast-player-optimized",
  "version": "1.2.0",
  "description": "Highly optimized fast Kodik player replacement for animestars.org with advanced caching, prefetching, and performance optimizations",
  "main": "dist/content.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run webpack:prod",
    "build:dev": "npm run clean && npm run compile && npm run webpack:dev", 
    "build:prod": "npm run clean && npm run compile && npm run webpack:prod",
    "dev": "npm run webpack:watch",
    "clean": "rimraf dist .webpack-cache",
    "clean:cache": "rimraf .webpack-cache node_modules/.cache",
    "compile": "tsc --noEmit",
    "compile:watch": "tsc --noEmit --watch",
    "webpack:prod": "webpack --mode=production",
    "webpack:dev": "webpack --mode=development", 
    "webpack:watch": "webpack --mode=development --watch",
    "package": "npm run build:prod && npm run zip",
    "package:dev": "npm run build:dev && npm run zip",
    "zip": "cd dist && powershell Compress-Archive -Path * -DestinationPath ../animestars-kodik-extension.zip -Force",
    "test": "npm run compile && echo 'TypeScript compilation successful'",
    "lint": "echo 'Linting with TypeScript compiler' && npm run compile",
    "start": "npm run build:dev && echo 'Extension built for development. Load the dist folder in Chrome.'",
    "prebuild": "npm run clean:cache"
  },
  "keywords": [
    "chrome-extension",
    "anime",
    "kodik",
    "video-player",
    "animestars",
    "performance",
    "optimization",
    "caching",
    "hls",
    "streaming"
  ],
  "author": "Wholumulu",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "hls.js": "^1.4.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88",
    "Firefox >= 85"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hantYT/animestars_kodik_fix.git"
  },
  "bugs": {
    "url": "https://github.com/hantYT/animestars_kodik_fix/issues"
  },
  "homepage": "https://github.com/hantYT/animestars_kodik_fix#readme",
  "config": {
    "maxSize": "500KB",
    "targetSize": "300KB",
    "compressionLevel": 9
  },
  "extensionManifest": {
    "version": "1.2.0",
    "optimizations": [
      "instant-placeholder",
      "memory-cache",
      "request-pooling", 
      "segment-prefetching",
      "adaptive-bitrate",
      "cdn-optimization",
      "batch-operations",
      "tree-shaking",
      "code-splitting"
    ],
    "performance": {
      "loadTime": "< 100ms",
      "memoryUsage": "< 50MB",
      "cacheSize": "< 200MB"
    }
  }
}
